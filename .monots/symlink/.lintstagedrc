{
  "**/*.js": [
    "prettier --write --ignore-path .eslintignore"
  ],
  "*.{json,yml,yaml}": [
    "prettier --write --ignore-path .eslintignore"
  ],
  "*.{md,mdx}": [
    "prettier --write --ignore-path .eslintignore"
  ],
  "{packages,apps,tests}/**/*.{ts,tsx,js,svelte}": [
    "ESLINT_FULL_CHECK=1 eslint --fix",
    "prettier --ignore-path .eslintignore --write"
  ],
  "{programs,crates}/**/*.rs": [
    "cargo fmt --"
  ]
}
